{
  "name": "portal-be-api",
  "version": "1.0.0",
  "description": "Enterprise Backend API with Fastify, Drizzle ORM, PostgreSQL",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "prisma generate && tsc && tsc-alias && node copy-paths.js",
    "start": "node -r ./register.js dist/server.js",
    "format": "prettier --write \"src/**/*.{ts,js,json}\" \"*.{json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\" \"*.{json,md}\"",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:introspect": "drizzle-kit introspect",
    "db:pull": "drizzle-kit pull",
    "db:pull:verbose": "drizzle-kit pull --verbose",
    "prisma:generate": "prisma generate",
    "g": "tsx scripts/generate-module.ts",
    "kill": "kill-port 3000"
  },
  "keywords": [
    "fastify",
    "drizzle",
    "postgresql",
    "typescript",
    "enterprise"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^10.1.0",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.4",
    "@prisma/client": "^7.2.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.9.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.45.1",
    "fastify": "^5.7.1",
    "fastify-type-provider-zod": "^6.1.0",
    "jsonwebtoken": "^9.0.2",
    "minio": "^8.0.6",
    "module-alias": "^2.2.3",
    "postgres": "^3.4.8",
    "uuid": "^13.0.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20.17.9",
    "@types/pg": "^8.16.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitest/ui": "^4.0.17",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "kill-port": "^2.0.1",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.8.0",
    "prisma": "^7.2.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^4.0.17"
  }
}
